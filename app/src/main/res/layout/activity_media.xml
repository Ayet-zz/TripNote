<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

         <android.support.v7.widget.RecyclerView
            android:layout_margin="6dp"
            android:id="@+id/media_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_above="@+id/comment"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/media_recycler_view"
            android:layout_alignRight="@+id/media_recycler_view"
            android:layout_margin="16dp"
            app:fabSize="normal"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>

        <EditText
            android:id="@+id/comment"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:hint="@string/comment"/>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/updateComment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_check_circle_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <ProgressBar
        android:id="@+id/media_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>





