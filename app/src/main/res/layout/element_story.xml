<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:layout_margin="5dp"
    tools:context="com.ayetlaeuffer.tripnote.StoriesFragment">

    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/DarkPink"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@+id/author"
        android:fontFamily="@font/roboto_condensed_light"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/description"
        android:layout_below="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/Black"
        android:fontFamily="@font/roboto"
    />
    <ImageView
        android:padding="8dp"
        android:id="@+id/image"
        android:layout_below="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"/>

    <TextView
        android:id="@+id/commentString"
        android:visibility="gone"
        android:layout_below="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/DarkPink"
        android:text="Comments"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:visibility="gone"
        android:background="@drawable/ic_roundedbox"
        android:layout_margin="8dp"
        android:layout_below="@+id/commentString"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/authorComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/DarkPink"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto_condensed_light"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
                <TextView
                    android:layout_margin="8dp"
                    android:id="@+id/commentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/roboto"
                    />
    </LinearLayout>
</RelativeLayout>
